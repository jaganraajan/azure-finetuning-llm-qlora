# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_ML_WORKSPACE=your-ml-workspace
AZURE_LOCATION=eastus2

# Azure ML Compute
COMPUTE_CLUSTER_NAME=gpu-cluster
COMPUTE_VM_SIZE=Standard_NC6s_v3
COMPUTE_MIN_NODES=0
COMPUTE_MAX_NODES=4

# Model Configuration
BASE_MODEL_NAME=microsoft/DialoGPT-medium
MAX_LENGTH=512
BATCH_SIZE=8
LEARNING_RATE=2e-4
NUM_EPOCHS=3

# QLoRA Configuration
LORA_R=16
LORA_ALPHA=32
LORA_DROPOUT=0.1
TARGET_MODULES=["q_proj", "v_proj"]

# Data Configuration
DATASET_NAME=healthcare_qa
TRAIN_SPLIT=0.8
VAL_SPLIT=0.1
TEST_SPLIT=0.1

# Bot Service Configuration
BOT_APP_ID=your-bot-app-id
BOT_APP_PASSWORD=your-bot-app-password
BOT_ENDPOINT=https://your-bot.azurewebsites.net

# Logging and Monitoring
WANDB_PROJECT=azure-healthcare-qlora
LOG_LEVEL=INFO

# Health Data Services
FHIR_SERVICE_URL=https://your-fhir-service.azurehealthcareapis.com
HEALTH_DATA_WORKSPACE=your-health-workspace